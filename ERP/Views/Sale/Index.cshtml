@model Sale

<body>
    <div class="block w-auto border border-blue-500 m-8 p-2">
        <h1><b>Ticket created by me:</b></h1>
        <div class="border border-gray-500 m-5"></div>
        <ul>
            @foreach (var ticket in Model.MonitoringTickets())
            {
                <li>
                    <p>
                        <b>Title:</b> @ticket.Content <br />
                        <b>Time created:</b> @ticket.DateCreated.ToLongDateString() <br />
                    </p>
                    <p>
                        @if (ticket.type == TicketType.Sale)
                        {
                            <a href="/ticket/sale/@ticket.ID"><u><b>Detail</b></u></a>
                        }
                        else if (ticket.type == TicketType.Engineer)
                        {
                            <a href="/ticket/engineer/@ticket.ID"><u><b>Detail</b></u></a>
                        }
                        else if (ticket.type == TicketType.CustomerSuccess)
                        {
                            <a href="/ticket/cs/@ticket.ID"><u><b>Detail</b></u></a>
                        }

                    </p>
                    <div class="border border-gray-200 m-2"></div>
                </li>
            }
        </ul>
    </div>
    <div class="block w-auto border border-blue-500 m-8 p-4">
        <h1 class="text-center"><i>Ticket for Sale Department:</i></h1>
        <div class="border border-gray-500 m-5"></div>
        <ul>
            @foreach (var ticket in Model.Tickets())
            {
                <li>
                    <p>
                        <b>Title:</b> @ticket.Content <br />
                        <b>Time created:</b> @ticket.DateCreated.ToLongDateString() <br />
                        <b>Created by:</b> @ticket.UserID
                    </p>
                    <p>
                        <a href="/ticket/sale/@ticket.ID"><u><b>Detail</b></u></a>
                    </p>
                    <div class="border border-gray-200 m-2"></div>
                </li>
            }
        </ul>
    </div>
    <div class="block w-auto border border-blue-500 m-8 p-2">
        <h1><b>TICKET FOR CUSTOMER SUCCESS</b></h1>
        <form action="/ticket/cs" method="POST">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content">Content:</label>
            <div class="flex m-2">
                <textarea class="w-11/12 ml-auto mr-auto h-20 resize-none rounded border" type="text" id="content" name="content" required></textarea>
            </div>
            <div class="w-11/12 ml-auto mr-auto">
                <input class="ml-auto block bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-2 rounded" type="submit" value="Submit">
            </div>
        </form>
    </div>
    <div class="block w-auto border border-blue-500 m-8 p-2">
        <h1><b>TICKET FOR ENGINEER</b></h1>
        <form action="/ticket/cs" method="POST">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content">Content:</label>
            <div class="flex m-2">
                <textarea class="w-11/12 ml-auto mr-auto h-20 resize-none rounded border" type="text" id="content" name="content" required></textarea>
            </div>
            <div class="w-11/12 ml-auto mr-auto">
                <input class="ml-auto block bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-2 rounded" type="submit" value="Submit">
            </div>
        </form>
    </div>
    <div class="block w-auto border border-blue-500 m-8 p-2">
        <h1><b>UPGRADE CUSTOMER</b></h1>
        <form action="/customer/tier" method="POST">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content">Customer ID:</label>
            <div class="flex m-2">
                <input class="w-4/12 ml-auto mr-auto h-10 resize-none rounded border" type="text" name="customerId" required />
            </div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content">Tier:</label>
            <div class="flex m-2">
                <input class="w-4/12 ml-auto mr-auto h-10 resize-none rounded border" type="text" name="tier" required />
            </div>
            <div class="w-11/12 ml-auto mr-auto">
                <input class="ml-auto block bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-2 rounded" type="submit" value="Submit">
            </div>
        </form>
    </div>
    <div class="block w-auto border border-blue-500 m-8 p-2">
        <h1><b>CREATE BILL</b></h1>
        <form action="/bill" method="POST">
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content">Customer ID:</label>
            <div class="flex m-2">
                <input class="w-4/12 ml-auto mr-auto h-10 resize-none rounded border" type="text" name="UserID" required />
            </div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content">Content:</label>
            <div class="flex m-2">
                <input class="w-4/12 ml-auto mr-auto h-10 resize-none rounded border" type="text" name="Content" required />
            </div>
            <label class="block text-gray-700 text-sm font-bold mb-2" for="content">Amount:</label>
            <div class="flex m-2">
                <input class="w-4/12 ml-auto mr-auto h-10 resize-none rounded border" type="number" name="Amount" required />
            </div>
            <div class="w-11/12 ml-auto mr-auto">
                <input class="ml-auto block bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-2 rounded" type="submit" value="Submit">
            </div>
        </form>
    </div>

</body>
